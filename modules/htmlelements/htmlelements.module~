<?php
// $Id $

/**
 * @file
 * subtheme.module provides users a settings page for creating a subtheme. 
 */

/**
 * Implementation of hook_form_alter().
 */
function htmlelements_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'subtheme_form') {
    $form['htmlelements'] = array(
      '#type' => 'fieldset',
      '#title' => t('HTML Elements'),
      '#collapsible' => TRUE,
      '#collapsed' => TRUE,
    );
    // <p> 
    $form['htmlelements']['p'] = array(
      '#type' => 'fieldset',
      '#title' => t('p - Paragraph'),
      '#collapsible' => TRUE,
      '#collapsed' => TRUE,
    );
    $form['htmlelements']['p']['subtheme_element--p_font-family'] = array(
      '#type' => 'textfield',
      '#title' => t('Font Family'),
      '#default_value' => variable_get('subtheme_element--p_font-family', NULL ),
      '#description' => t(''),
    );
    $form['htmlelements']['p']['subtheme_element--p_font-size'] = array(
      '#type' => 'textfield',
      '#title' => t('Font Size'),
      '#default_value' => variable_get('subtheme_element--p_font-size', NULL ),
      '#description' => t(''),
    );
    $form['htmlelements']['p']['subtheme_element--p_font-weight'] = array(
      '#type' => 'textfield',
      '#title' => t('Font Weight'),
      '#default_value' => variable_get('subtheme_element--p_font-weight', NULL ),
      '#description' => t(''),
    );
    $form['htmlelements']['p']['subtheme_element--p_line-height'] = array(
      '#type' => 'textfield',
      '#title' => t('Line Height'),
      '#default_value' => variable_get('subtheme_element--p_line-height', NULL ),
      '#description' => t(''),
    );
  }
}

